<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkWindow" id="window">
    <property name="default-width">800</property>
    <property name="default-height">800</property>
    <property name="child">
      <object class="GtkFixed" id="grid">
        <child>
          <object class="GtkButton" id="sign_up_button">
            <layout>
              <property name="transform">translate(350, 391)</property>
            </layout>
            <property name="label" translatable="1">Sign Up</property>
            <property name="width-request">100</property>
            <property name="height-request">34</property>
            <property name="focusable">1</property>
            <property name="receives-default">1</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="back_button">
            <layout>
              <property name="transform">translate(350, 429)</property>
            </layout>
            <property name="label" translatable="1">Back</property>
            <property name="width-request">100</property>
            <property name="height-request">34</property>
            <property name="focusable">1</property>
            <property name="receives-default">1</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="username_text_box">
            <layout>
              <property name="transform">translate(300, 262)</property>
            </layout>
            <property name="width-request">200</property>
            <property name="focusable">1</property>
            <property name="placeholder-text" translatable="1">Username:</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="repeat_password_text_box">
            <layout>
              <property name="transform">translate(300, 335)</property>
            </layout>
            <property name="width-request">200</property>
            <property name="focusable">1</property>
            <property name="visibility">0</property>
            <property name="invisible-char">•</property>
            <property name="placeholder-text" translatable="1">Repeat password:</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="password_text_box">
            <layout>
              <property name="transform">translate(300, 299)</property>
            </layout>
            <property name="width-request">200</property>
            <property name="focusable">1</property>
            <property name="visibility">0</property>
            <property name="invisible-char">•</property>
            <property name="placeholder-text" translatable="1">Password:</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="error_label">
            <layout>
              <property name="transform">translate(252, 212)</property>
            </layout>
            <property name="visible">0</property>
            <property name="width-request">298</property>
            <property name="label" translatable="1">That username is used! Choose the other one.</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="correct_label">
            <layout>
              <property name="transform">translate(252, 212)</property>
            </layout>
            <property name="visible">0</property>
            <property name="width-request">298</property>
            <property name="height-request">20</property>
            <property name="label" translatable="1">Correct!</property>
          </object>
        </child>
      </object>
    </property>
  </object>
</interface>
